.panel
  width: 100%
  height: 100%
  display: flex
  flex-direction: column
  gap: .5em
  background: #fff
  border-radius: .3em
  box-shadow: 0 1px 3px rgba(0,0,0,.1)
  border: 1px solid #e7e8e9
  padding: .2em .4em

  .head
    flex: 0 0 1.25em
    font-size: .9em
    color: #333435
  .body
    flex: 1 0 auto

